{
  "rules": [
    {
        "description": "Change caps_lock to command+control+option",
        "manipulators": [
            {
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": { "optional": ["any"] }
                },
                "to": [
                    {
                        "key_code": "left_command",
                        "modifiers": ["left_control", "left_option"]
                    }
                ],
                "type": "basic"
            }
        ]
    },
    {
        "description": "Change Hyper + N to Enter",
        "manipulators": [
            {
                "from": {
                    "key_code": "n",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "return_or_enter" }],
                "type": "basic"
            }
        ]
    },
    {
        "description": "Change Hyper + Y to backspace",
        "manipulators": [
            {
                "from": {
                    "key_code": "y",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "delete_or_backspace" }],
                "type": "basic"
            }
        ]
    },
    {
        "description": "Change Hyper + E to Escape",
        "manipulators": [
            {
                "from": {
                    "key_code": "e",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "escape" }],
                "type": "basic"
            }
        ]
    },
    {
        "description": "Change Hyper + H/J/K/L to Arrow Keys",
        "manipulators": [
            {
                "from": {
                    "key_code": "h",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "left_arrow" }],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "j",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "down_arrow" }],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "k",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "up_arrow" }],
                "type": "basic"
            },
            {
                "from": {
                    "key_code": "l",
                    "modifiers": {
                        "mandatory": ["left_command", "left_control", "left_option"],
                        "optional": ["any"]
                    }
                },
                "to": [{ "key_code": "right_arrow" }],
                "type": "basic"
            }
        ]
    }
  ]
}
